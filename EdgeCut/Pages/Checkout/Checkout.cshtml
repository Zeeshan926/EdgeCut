@page
@model EdgeCut.Pages.Checkout.CheckoutModel
@{
}
<h1>Your Orders!</h1>
@{
    var imagePath = "~/images/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src="/images/f3.png" class="w-100" asp-append-version="true" />
        <p>Your order for @Model.FurnitureName the Furniture is ready</p>
        <p>Total price for your order is: @Model.FurniturePrice$</p>
        <br />
        <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="/ThankYou">Confirm Order</a>
    </div>
</div>